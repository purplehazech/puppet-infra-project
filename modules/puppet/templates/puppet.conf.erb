[main]
    # The Puppet log directory.
    # The default value is '$vardir/log'.
    logdir = /var/log/puppet

    # Where Puppet PID files are kept.
    # The default value is '$vardir/run'.
    rundir = /var/run/puppet

    # Where SSL certificates are kept.
    # The default value is '$confdir/ssl'.
    ssldir = $vardir/ssl

    config = /etc/config/puppet.conf

    pluginsync = <%= puppet_pluginsync %>

    modulepath = $confdir/modules:/usr/share/puppet/modules:/usr/share/puppet-infra-project/modules
    manifestdir = /usr/share/puppet-infra-project/manifests
 
<% if has_variable?("puppet_master") && puppet_master == true then %>
[master]
    reports = store,http
    reporturl = http://<%= puppet_server %>:3000/reports/upload
<% if has_variable?("puppet_storeconfig_provider") then %>
    storeconfigs = true
<% if puppet_storeconfig_provider == "puppetdb" then %>
    storeconfigs_backend = puppetdb
<% end %>
<% if puppet_storeconfig_provider == "activerecord" then %>
    storeconfigs_backend = active_record

    dbadapter  = <%= puppet_storeconfig_db_adapter %>
    dbuser     = <%= puppet_storeconfig_db_user %>
    dbpassword = <%= puppet_storeconfig_db_password %>
    dbserver   = <%= puppet_storeconfig_db_server %>
    dbname     = <%= puppet_storeconfig_db_name %>
<% end %>
<% end %>
<% if has_variable?("ldap_base_dn") then %>
    # ldapconfig 
    node_terminus = ldap
    ldapnodes = true
    ldapserver = <%= ldap_server %>
    ldapbase = <%= ldap_base_dn %>
    ldapuser = <%= ldap_user %>
    ldappassword = <%= ldap_passwd %>
<% end %>
<% end %>

[agent]
    report = true
    server = <%= puppet_server %>
    
    # The file in which puppetd stores a list of the classes
    # associated with the retrieved configuratiion.  Can be loaded in
    # the separate ``puppet`` executable using the ``--loadclasses``
    # option.
    # The default value is '$confdir/classes.txt'.
    classfile = $vardir/classes.txt

    # Where puppetd caches the local configuration.  An
    # extension indicating the cache format is added automatically.
    # The default value is '$confdir/localconfig'.
    localconfig = $vardir/localconfig
